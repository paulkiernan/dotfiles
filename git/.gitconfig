[user]
    name = Paul Kiernan
    email = paul.kiernan@reddit.com

[core]
    editor = vim
    excludesfile = .gitignore

[alias]
    st = status --short
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log -p
    ff = merge --ff-only
    mg = merge --no-ff
    pl = pull --ff-only
    gl  = log -16 --color=always --all --graph --topo-order --pretty='format: %Cgreen%h%Creset %s%Cr'
    gll = log     --color=always --all --graph --topo-order --pretty='format: %Cgreen%h%Creset %s%Cr'

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true

[diff]
    algorithm = patience

[gc]
    auto=1

[merge]
    summary=true

[push]
    default = simple

[hooks]
    global = ~/.git/githooks

[github]
    user = paulkiernan

[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process

[credential]
    helper = osxkeychain
[pull]
	ff = only
